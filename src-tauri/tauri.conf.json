{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EasyDB",
  "version": "2.4.1",
  "identifier": "com.easydb.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "yarn && yarn dev",
    "beforeBuildCommand": "yarn && yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "EasyDB",
        "width": 1440,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}